<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="titleStyle">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="descriptionStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="labelStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="inputStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@color/graysoft</item>
        <item name="android:hint">@color/grayblueish</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:radius">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:strokeColor">@color/gray</item>

    </style>
    <style name="inputCreateStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:hint">@color/grayblueish</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:radius">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:strokeColor">@color/gray</item>

    </style>
    <style name="cardTitleStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="cardDescriptionStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingTop">25dp</item>
    </style>
    <style name="cardTimeStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="cardDateStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/grayblueish</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="btnStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">20dp</item>

        <item name="android:fontWeight">@integer/material_motion_duration_medium_1</item>

    </style>
</resources>